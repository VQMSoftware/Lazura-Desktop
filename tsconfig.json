{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "paths": {
      "@icons/*": ["build/icons/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "scripts"]
}
