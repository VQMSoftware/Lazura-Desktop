{
  "appId": "com.lazura.desktop",
  "productName": "Lazura",
  "copyright": "Â© 2025 VQMSoftware",
  "files": [
    "build/**/*",
    "node_modules/**/*",
    "static/**/*"
  ],
  "directories": {
    "buildResources": "static/app_icon",
    "output": "dist"
  },
  "extraResources": [
    {
      "from": "static/",
      "to": "static/",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "icon": "static/app_icon/icon.ico",
    "target": "nsis"
  },
  "linux": {
    "icon": "static/app_icon/icon.png",
    "target": ["AppImage", "deb", "tar.gz"],
    "category": "Network",
    "maintainer": "VQMSoftware",
    "description": "A beautiful fast custom Electron web browser built with React."
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Lazura"
  },
  "publish": {
    "provider": "github",
    "owner": "VQMSoftware",
    "repo": "Lazura-Desktop",
    "releaseType": "release",
    "publishAutoUpdate": true
  }
}
